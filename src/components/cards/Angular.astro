---
import BubbleImage from "../BubbleImage.astro";
import Project from "../Project.astro";
import angularLogo from '../../assets/img/Angular.png?url';
import pokeQuizPreview from '../../assets/img/pokequiz_preview.png?url';

---

<div class="item item-with-gradient angular place-content-center" onclick="angular.showModal()">
    <BubbleImage 
        image = {angularLogo},
        title = "Angular"
    />
</div>

<dialog id="angular" class="modal" data-theme="light">
    <div class="modal-box max-w-none lg:w-1/2 w-1/1">
        <form method="dialog">
            <button class="btn btn-sm btn-circle btn-ghost absolute right-2 top-2">âœ•</button>
        </form>
        <div class="flex flex-wrap justify-center items-center mb-2 pb-4">
            <div class="flex-auto w-80">
                <hr class="w-16 h-1 bg-info border-0 rounded mb-2">
                <h1 class="font-bold text-6xl text-black">Angular</h1>
                <h4 class="font-normal text-2xl italic">Because React gave me a weird look</h4>
            </div>
        </div>
        <Project
            title = "PokeQuiz",
            description = "Juego basado en la API de Pokemon, donde el usuario tiene que adivinar el nombre del Pokemon a partir de una grito.",
            image = {pokeQuizPreview},
            features = {["Angular", "TypeScript", "API", "Routes", "Services", "Models", "Signals", "HTTP Requests"]},
            link = "https://pokequiz-ivory.vercel.app/"
        />
    </div>
    <form method="dialog" class="modal-backdrop">
        <button>close</button>
    </form>
</dialog>

<style>
    .angular {
        cursor: pointer;
    }
    button:focus {
        outline: 0;
    }
    .card-logo p {
        font-size: 100px;
    }
    svg {
        opacity: 75%;
        transition: .5s ease-out;
        -moz-transition: .5s ease-out;
        -webkit-transition: .5s ease-out;
        -o-transition: .5s ease-out;
        
        &:hover {
            opacity: 100%;
        }
    }
    
    
</style>
